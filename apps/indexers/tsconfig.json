{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "paths": {
            "@/lib/*": [
                "./lib/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        ".apibara/types"
    ],
    "exclude": [
        "node_modules"
    ],
}